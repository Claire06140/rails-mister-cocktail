<h1><%= @cocktail.name %></h1>

<h2>Recipe</h2>

<ul>
    <% @cocktail.doses.each do |dose| %>
         <li> <%= dose.description %>
        <%= dose.ingredient.name %> </li>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
      <% end %>
</ul>



<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-secondary' %>

<%= link_to "See all the cocktails", cocktails_path, class: 'btn btn-secondary' %>
